        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/bg_dark</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <!--<item name="colorPrimary">@color/teal</item>-->
